#!/bin/bash

#########################################################################################################
##############################             CHECK PUBLIC IP            ###################################
#########################################################################################################


########################################### PARAMETERS ##################################################

. HA.conf
. functions
. $(dirname $0)/HA.conf
. $(dirname $0)/functions

####################################### END OF PARAMETERS ###############################################


############################################# PROGRAM ###################################################

for i in $*; do 
	tmp=$(echo $i | cut -d = -f2)
	[[ $i == --ip=* ]] && ip=$tmp
	tmp=''
done

echo "passe"
if [[ ! -z "$ip" ]]; then
echo "passe encore" 
	changePublicIp $ip
fi

########################################### END PROGRAM #################################################