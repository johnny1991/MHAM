#!/bin/bash

#########################################################################################################
###############################             GET PUBLIC IP          ######################################
#########################################################################################################


############################################# PROGRAM ###################################################

for i in $*; do 
	tmp=$(echo $i | cut -d = -f2)
	[[ $i == --ip=* ]] && ip=$tmp
	[[ $i == --user=* ]] && user=$tmp
	tmp=''
done

if [[ ! -z "$ip" ]] &&  [[ ! -z "$user" ]]; 
then 
	sudo ssh $user@$ip ifconfig  | grep 'inet addr:\|inet adr:'| grep -v '127.0.0.1' | cut -d: -f2 | awk '{ print $1}'
fi

########################################### END PROGRAM #################################################